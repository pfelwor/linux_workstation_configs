" enable line-numbers
set number

" set 2 spaces as tab-eqivalent
set tabstop=2
set softtabstop=2

" set favorite theme
colorscheme delek

" enable syntax highlighting
syntax enable

" use spaces instead of tabs
set expandtab

" underline current line
set cursorline

" load plugin for recognized file extensions (if available)
filetype indent on

" mark closing parantheis and stuff if cursor is on opening one
set showmatch
